:: *****************************************************************
:: DELETE SYSTEM TEMP FILES [this requires admin elevation]
:deltempfiles
	call :print Deleting temporary files in Windows.
	del /s /f /q "%TEMP%\*.*"
	del /s /f /q "%SYSTEMROOT%\Temp\*.*"
	echo:
	echo deleted temp files!
	pause
	goto start



:: *****************************************************************
:: this should not require admin elevation
:autostartupcurrentuser

if not exist "C:\Users\%Username%\AppData\Roaming\Microsoft\Windows\Start Menu\Programs\Startup\tktool*.bat" copy %~dp0\tktool.bat "C:\Users\%Username%\AppData\Roaming\Microsoft\Windows\Start Menu\Programs\Startup\"

	timeout /t 3

	if exist "C:\Users\%Username%\AppData\Roaming\Microsoft\Windows\Start Menu\Programs\Startup\tktool*.bat" (
		takeown /f "C:\Users\%Username%\AppData\Roaming\Microsoft\Windows\Start Menu\Programs\Startup\tktool*.bat"
		attrib -r -s /s "C:\Users\%Username%\AppData\Roaming\Microsoft\Windows\Start Menu\Programs\Startup\tktool*.bat"
		ren "C:\Users\%Username%\AppData\Roaming\Microsoft\Windows\Start Menu\Programs\Startup\tktool*.bat" tktool_%username%_%computername%_%random%.bat
		%systemroot%\system32\msg.exe * /time:0 "tktool added to CURRENT user startup folder only"
		echo done & pause & goto start )




::*******************************************************************
::[this requires admin elevation]
:autostartupallusers

	if not exist "C:\ProgramData\Microsoft\Windows\Start Menu\Programs\StartUp\tktool*.bat" copy %~dp0\tktool.bat "C:\ProgramData\Microsoft\Windows\Start Menu\Programs\StartUp"

	timeout /t 3

	if exist "C:\ProgramData\Microsoft\Windows\Start Menu\Programs\StartUp\tktool*.bat" (
		takeown /f "C:\ProgramData\Microsoft\Windows\Start Menu\Programs\StartUp\tktool*.bat"
		attrib -r -s /s "C:\ProgramData\Microsoft\Windows\Start Menu\Programs\StartUp\tktool*.bat"
		ren "C:\ProgramData\Microsoft\Windows\Start Menu\Programs\StartUp\tktool*.bat" tktool_%username%_%computername%_%random%.bat
		%systemroot%\system32\msg.exe * /time:0 "tktool added to ALL USERS startup folder"
		echo done & pause & goto start )


:: restart printer spooler Service
:spool
echo Stopping the Printer Spooler Service.
pause
net stop Spooler
timeout /t 15 /nobreak
net start Spooler
%systemroot%\system32\msg.exe * /time:0 "Printer Spooler Service restarted! Your printers should work now."
echo:
pause
goto start


